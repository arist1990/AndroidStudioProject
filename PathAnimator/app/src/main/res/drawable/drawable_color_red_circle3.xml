<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- outer circle -->
    <item>
        <shape android:shape="rectangle" >
            <stroke android:width="1px" android:color="#f00" />
        </shape>
    </item>

    <!-- inner shadow of outer circle -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="#f00" />
        </shape>
    </item>

    <!-- center circle -->
    <item
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#0000"/>
        </shape>
    </item>

</layer-list>